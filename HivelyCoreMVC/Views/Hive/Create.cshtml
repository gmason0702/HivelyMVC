@model HivelyCoreMVC.Data.Entities.Hive

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Hive</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OwnerId" class="control-label"></label>
                <input asp-for="OwnerId" class="form-control" />
                <span asp-validation-for="OwnerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HiveName" class="control-label"></label>
                <input asp-for="HiveName" class="form-control" />
                <span asp-validation-for="HiveName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OriginDate" class="control-label"></label>
                <input asp-for="OriginDate" class="form-control" />
                <span asp-validation-for="OriginDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfDeeps" class="control-label"></label>
                <input asp-for="NumberOfDeeps" class="form-control" />
                <span asp-validation-for="NumberOfDeeps" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasSwarmed" /> @Html.DisplayNameFor(model => model.HasSwarmed)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QueenId" class="control-label"></label>
                <select asp-for="QueenId" class ="form-control" asp-items="ViewBag.QueenId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LocationId" class="control-label"></label>
                <select asp-for="LocationId" class ="form-control" asp-items="ViewBag.LocationId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
