@model IEnumerable<HivelyCoreMVC.Models.HiveModels.HiveListItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Hives</h1>

<p>
    <a asp-action="Create">Create New Hive</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HiveName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OriginDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfDeeps)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasSwarmed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Queen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.OwnerId)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.HiveName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriginDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfDeeps)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasSwarmed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Queen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
